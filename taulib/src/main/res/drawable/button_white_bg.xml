<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="@color/gray" />
            <solid android:color="@color/gray"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="@color/white_blue_dark" />
            <solid android:color="@color/white_blue_light"/>
<!--            <gradient android:angle="-90" android:startColor="@color/white_blue" android:endColor="@color/white_blue_light"  />-->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="@color/white_blue_dark" />
            <solid android:color="@color/white_blue_dark"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="@color/white_blue" />
            <solid android:color="@color/white_blue"/>
<!--            <gradient android:angle="-90" android:startColor="@color/white_blue_light" android:endColor="@color/white_blue" />-->
        </shape>
    </item>
</selector>
