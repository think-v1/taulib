<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="@color/gray" />
            <solid android:color="@color/gray"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="@color/secondary_dark" />
            <solid android:color="@color/secondary_light"/>
<!--            <gradient android:angle="-90" android:startColor="@color/secondary" android:endColor="@color/secondary_light"  />-->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="@color/secondary_dark" />
            <solid android:color="@color/secondary_dark"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="@color/secondary" />
            <solid android:color="@color/secondary"/>
<!--            <gradient android:angle="-90" android:startColor="@color/secondary_light" android:endColor="@color/secondary" />-->
        </shape>
    </item>
</selector>
